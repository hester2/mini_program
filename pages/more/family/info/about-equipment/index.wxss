.show {
  display: block;
}

.hidden {
  display: none;
}

.gn-medical-record-taps {
  background: #fff;
  color: #bbb;
  width: 100%;
  display: flex;
  margin-bottom: 27rpx;
  padding: 28rpx 125rpx;
  align-items: center;
}

.gn-medical-record-tap {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.gn-medical-record-tap-active {
  color: #a6d6fc;
}

.gn-medical-record-tap-line {
  border: 1rpx solid #fff;
  width: 42rpx;
  height: 4rpx;
  border-radius: 3rpx;
  background: #fff;
  margin-top: 13rpx;
  margin-left: 6rpx;
}

.gn-line-active {
  border: 1rpx solid #a6d6fc;
  background: #a6d6fc;
}

.gn-about-equipment-header {
  padding: 0 220rpx;
}

.gn-about-equipment-header-tab {
  margin-right: 70rpx;
}

.gn-info-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #49a0ff 0%, #49a0ff 60%, #bf64ff 100%);
  margin: 26rpx 28rpx;
  padding: 44rpx 72rpx 38rpx 72rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}

.gn-info-header-data {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.gn-info-header-data-title {
  width: 170rpx;
  background: #fff;
  color: #49a0ff;
  padding: 18rpx 31rpx;
  border-radius: 10rpx;
  margin-bottom: 34rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}

.gn-info-header-data-time {
  color: #fff;
  margin-bottom: 33rpx;
}

.gn-info-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.gn-info-header-data-main {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
}

.gn-info-header-data-main-deadline {
  margin-right: 34rpx;
}

.gn-about-equipment-watch-picture {
  width: 157rpx;
  height: 169rpx;
}

.gn-info-main {
  margin: 27rpx 28rpx;
  padding: 34rpx 72rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  background: #fff;
  color: #808080;
}

.gn-info-main-item-wrap {
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 30rpx;
  padding-top: 27rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.gn-info-main-item-wrap:last-child {
  border: none;
}

.gn-info-main-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 220rpx;
}

.gn-info-main-item-title {
  color: #49a0ff;
  margin-bottom: 20rpx;
}



.gn-member-info-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin:50rpx 28rpx 30rpx 28rpx;
  border-radius: 10rpx;
  color: #808080;
  background: #ffffff;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}

.gn-member-photo {
  width: 73rpx;
  height: 73rpx;
  margin: 39rpx 20rpx 39rpx 36rpx;
  border: 1rpx solid #49a0ff;
  border-radius: 50%;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}

.gn-member-info {
  display: flex;
  flex-direction: column;
  margin: 42rpx 255rpx 42rpx 0;
}

.gn-member-icon {
  width: 19rpx;
  height: 22rpx;
  margin-right: 11rpx;
}

.gn-member-name {
  color: #4d4d4d;
}

.gn-member-number-wrap {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 23rpx;
}

.gn-member-number {
  margin-right: 28rpx;
  display: flex;
  align-items: center;
}

.gn-member-role-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-right: 36rpx;
  width: 60rpx;
}

.gn-member-role-icon {
  width: 40rpx;
  height: 42rpx;
  margin-bottom: 9rpx;
}

.gn-member-role {
  color: #49a0ff;
}

.gn-member-buttons {
  height: 100%;
  width: 165rpx;
}

.gn-member-button {
  width: 100%;
  float: left;
  display: flex;
  height: 100%;
  justify-content: center;
  background: #a6d6fc;
  color: #fff;
  align-items: center;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  box-shadow: 0 0 0 0 rgba(137, 137, 137, 0.05),
                0 0 0 0 rgba(137, 137, 137, 0.05),
                0 0 0 0 rgba(137, 137, 137, 0.05),
                3px 0 0 0 rgba(166, 214, 252, 1);
}

.gn-member-add-icon {
  width: 74rpx;
  height: 74rpx;
  position: fixed;
  right: 62rpx;
  bottom: 198rpx;
}
