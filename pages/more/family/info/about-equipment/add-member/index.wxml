    <input placeholder='手机：' placeholder-class="gn-app-placeholder" name="phone" bindinput="toGetFollowerPhone" type="number" maxlength="11"></input>
    <view class="gn-app-fs28 gn-add-member-title">请完善关注者与佩戴者关系</view>
