.gn-medical-record-header{
  padding: 0 150rpx;
}
.gn-header-tab{
margin-left: 20rpx;
}

.gn-medical-record-main {
  margin: 33rpx 28rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  border-radius: 10rpx;
  border-top: 10rpx solid #49a0ff;
  padding-bottom: 31rpx;
  color: #808080;
  background: #ffffff;
}

.gn-main-title {
  color: #fff;
  background: #49a0ff;
  padding: 4rpx 36rpx 14rpx 36rpx;
  display: flex;
  justify-content: space-between;
}

.gn-main-content {
  margin: 25rpx 36rpx 0 36rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  background: #ffffff;
}

.gn-main-reports {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 23rpx;
  flex-wrap: wrap;
}

.gn-main-report {
  width: 169rpx;
  height: 216rpx;
  border: 1rpx solid #a6d6fc;
  margin-right: 34rpx;
  margin-top:12rpx;
}
.gn-main-content-first-line{
   margin-bottom: 6rpx;
}
.gn-main-content-number-color{
  color: #49a0ff;
}
.gn-medical-record-add-button {
  width: 74rpx;
  height: 74rpx;
 position: fixed;
  right: 62rpx;
  bottom: 198rpx;
}
.gn-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.3;
}
.gn-user-info-modal{
  width: 587rpx;
  background: #ffffff;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  border-radius: 32rpx;
  z-index: 9999;
  position: fixed;
  margin-left: 81rpx;
  margin-right: 81rpx;
  top: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #49a0ff;
  padding-bottom: 49rpx;
  padding-top: 53rpx;
}
.gn-modal-title{
  color: #808080;
  margin-bottom: 18rpx;
}
.gn-modal-content{
  margin-bottom:68rpx;
  margin-top:40rpx;
}
.gn-mask-link-button{
  text-align: center;
  color: #ffffff;
  width: 188rpx;
  height: 66rpx;
  background: #49a0ff;
  border-radius: 32rpx;
  line-height: 66rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}
