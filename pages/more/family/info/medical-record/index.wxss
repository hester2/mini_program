.show {
  display: block;
}

.hidden {
  display: none;
}

.gn-medical-record-taps {
  background: #fff;
  color: #bbb;
  width: 100%;
  display: flex;
  margin-bottom: 27rpx;
  padding: 28rpx 0;
  align-items: center;
}

.gn-medical-record-tap {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.gn-medical-record-tap-active {
  color: #a6d6fc;
}

.gn-medical-record-tap-line {
  border: 1rpx solid #fff;
  width: 42rpx;
  height: 4rpx;
  border-radius: 3rpx;
  background: #fff;
  margin-top: 13rpx;
  margin-left: 6rpx;
}

.gn-line-active {
  border: 1rpx solid #a6d6fc;
  background: #a6d6fc;
}

/* page {
  position: relative;
