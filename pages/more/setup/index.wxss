/* pages/more/setup/index.wxss */
.yh-chives-main{
  box-sizing: border-box;
  margin: 28rpx 28rpx;
  box-shadow: 0px 0px 8rpx 8rpx rgba(137, 137, 137, 0.05);
  padding: 0px 28rpx;
  border-radius: 10rpx;
}
.yh-holder{
  font-size: 28rpx;
}
.grace-form-label{
  color: #4D4D4D
}
.grace-form-body{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #808080
}
.grace-form-body .text{
  width: 92rpx;
  height: 38rpx;
  border:1px solid #49A0FF;
  border-radius: 18rpx;
  color: #49A0FF;
  font-size: 22rpx;
  text-align: center;
}
.grace-border-b{
  border-bottom: 1px solid #F8F8F8;
  color: #808080
}
.grace-border-b:last-of-type{
  border-bottom: 0px solid #eee
}
.icon-arrow-right{
  color: #D7D7E0;
  font-size: 32rpx;
}

.UploadBtnarea{

  width: 100%;

  height: 64r32px;

  margin-top: 60rpx;

  margin-bottom: 20rpx;

}

.UploadBtnclass{

  height: 100%;

  width: 30%;

  background-color: #49A0FF;

  color: white;

  align-self: center;

  font-size: 26rpx;

  border-radius: 60rpx;

  margin-top: 200rpx;

}

/*  */
 
.yh-modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
 
.yh-modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 20rpx;
}
 
.yh-modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #4D4D4D;
  text-align: center;
}
 
.yh-modal-footer {
  font-size: 36rpx;
  width: 188rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 30rpx;
  color: #fff;
  background-color: #49A0FF;
  text-align: center;
  margin-bottom: 30rpx;
}
 
.yh-btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
 
.yh-btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.yh-modal-content{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.yh-modal-color{
  color: #49A0FF;
  margin: 30rpx 0px;
}