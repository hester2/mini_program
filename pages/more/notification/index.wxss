
.show {
  display: block;
}

.hidden {
  display: none;
}

.gn-notification-taps {
  background: #fff;
  color: #bbb;
  display: flex;
  margin-bottom: 27rpx;
  padding: 28rpx 125rpx;
  align-items: center;
}

.gn-notification-tap {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.gn-notification-tap-active {
  color: #a6d6fc;
}

.gn-notification-tap-line {
  border: 1rpx solid #fff;
  width: 42rpx;
  height: 4rpx;
  border-radius: 3rpx;
  background: #fff;
  margin-top: 13rpx;
  margin-left: 6rpx;
}

.gn-line-active {
  border: 1rpx solid #a6d6fc;
  background: #a6d6fc;
}

.gn-notification-wrap {
  border-radius: 10rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  margin: 24rpx 28rpx 29rpx 28rpx;
  display: flex;
  flex-direction: column;
  border-top: 10rpx solid #49a0ff;
}

.gn-notification-time {
  background: #49a0ff;
  padding: 18rpx 36rpx;
  padding-top: 8rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gn-notification-content {
  color: #4d4d4d;
  border-bottom: 2rpx solid #f2f2f2;
  margin-left: 36rpx;
  margin-right: 36rpx;
  padding-bottom: 22rpx;
  padding-top: 22rpx;
}

.gn-notification-check-detail {
  padding: 11rpx 36rpx 11rpx 500rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  color: #49a0ff;
}

.gn-notification-check-icon {
  height: 33rpx;
  width: 31rpx;
  margin-right: 12rpx;
}

.gn-notification-checked-text {
  color: #bbb;
}
