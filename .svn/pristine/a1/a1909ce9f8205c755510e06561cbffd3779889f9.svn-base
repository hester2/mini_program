/* pages/home/scan/scan_to/index.wxss */
.yh-figure-main{
  margin: 30rpx 28rpx;
  box-shadow: 2rpx 2rpx 12rpx #EAF4FF;
  box-sizing: border-box;
  padding: 28rpx 28rpx;
}
.yh-figure-ma{
  color: #49A0FF;
}
.yh-figure-card{
  display: flex;
  flex-flow:row wrap;
  justify-content: flex-start;
  margin-top: 30rpx;
}
.yh-figure-item{
  width: 30.8%;
  height: 198rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  background-color: #F4F7F9;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
}
.yh-figure-te{
  font-size: 28rpx;
  color: #4D4D4D;
  text-align: center;
  margin-top: 20rpx;
}
.yh-figure-su{
  font-size: 22rpx;
  color: #B3B3B3;
   text-align: center;
   margin-top: 10rpx;
}
.yh-figure-item:nth-of-type(3){
  margin-right: 0rpx;
}
.left{
}
._left{
 background-color: #49A0FF;
 color: #fff;
}

.grace-form-item{
  display: flex;
  box-sizing: border-box;
  padding: 0px 30rpx;
  margin: 30rpx 28rpx;
   box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
   border-radius: 10rpx;
}
.grace-form-input{
  font-size: 28rpx;
}
.yh-holder{
   font-size: 28rpx;
}
.grace-button{
  background-color: #48a0ff !important;
  color: #fff;
  width: 40%;
  line-height: 80rpx;
  height: 80rpx;
  border-radius: 60rpx;
  margin-top: 120rpx;
}