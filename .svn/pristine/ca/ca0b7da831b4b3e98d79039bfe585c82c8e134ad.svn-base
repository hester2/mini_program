.gn-user-info-container {
  margin-left: 28rpx;
  margin-right: 28rpx;
  color: #808080;
}
.gn-user-info-header {
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  border-radius: 10rpx;
  margin-top: 53rpx;
}

.gn-user-item-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 3rpx solid rgba(128, 128, 128, 0.2);
  padding-bottom: 53rpx;
  padding-top: 44rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
}

.gn-user-item-right-part {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.gn-user-photo {
  width: 76rpx;
  height: 76rpx;
}

.gn-user-info-authentication {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 44rpx 36rpx 53rpx 36rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  margin-top: 22rpx;
}

.gn-authentication-item-borders {
  color: #49a0ff;
  border: 1rpx solid #49a0ff;
  border-radius: 3rpx;
  text-align: center;
  padding: 10rpx 18rpx;
}

.gn-user-info-info-detail {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 44rpx 36rpx 53rpx 36rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  margin-top: 22rpx;
}

.gn-info-detail-icon {
  width: 50rpx;
  height: 10rpx;
}

.gn-user-info-right-icon {
  width: 16rpx;
  height: 28rpx;
  margin-left: 30rpx;
}

.gn-upload-photo {
  font-size: 28rpx;
  color: #49a0ff;
  margin-bottom: 27rpx;
  margin-top: 40rpx;
}

.gn-upload-photo-line {
  width: 455rpx;
  height: 2rpx;
  background: #a6d6fc;
  margin: 0 auto;
  opacity: 0.2;
}

.gn-upload-photo-in-phone {
  font-size: 28rpx;
  color: #49a0ff;
  margin-top: 27rpx;
}

.gn-verify-identity {
  display: flex;
  align-items: center;
}

.gn-verify-identity-icon {
  height: 26rpx;
  width: 34rpx;
  padding-left: 65rpx;
}

input {
  width: 220rpx;
  border:none;
  background:#ffffff;
}

.gn-verify-identity-button {
  width: 148rpx;
  height: 47rpx;
  font-size: 20rpx;
  background: #49a0ff;
  color: #fff;
  border-radius: 10rpx;
  white-space: nowrap;
}

.gn-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.3;
}
.gn-user-info-modal{
  width: 587rpx;
  background: #ffffff;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  border-radius: 32rpx;
  z-index: 9999;
  position: fixed;
  margin-left: 81rpx;
  margin-right: 81rpx;
  top: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #49a0ff;
  padding-bottom: 49rpx;
  padding-top: 53rpx;
}
.gn-modal-title{
  color: #808080;
}
.gn-avatar-modal-camera{
  width: 455rpx;
  margin-top: 61rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 27rpx;
  text-align: center;
}
.gn-name-modal-input{
  margin-top: 58rpx;
  margin-bottom: 53rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 11rpx;
  width: 456rpx;
}
.gn-name-modal-button{
  text-align: center;
  color: #ffffff;
  width: 188rpx;
  height: 66rpx;
  background: #49a0ff;
  border-radius: 32rpx;
  line-height: 66rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
}
.gn-certification-modal-main{
  display: flex;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 21rpx;
  margin-top: 47rpx;
  margin-bottom: 53rpx;
  width: 456rpx;
  align-items: center;
}
.gn-certification-modal-input{
width: 248rpx;
}
.gn-certification-modal-code-button{
  width: 148rpx;
  height: 47rpx;
  line-height: 47rpx;
  background: #49a0ff;
  border-radius: 10rpx;
  color: #ffffff;
  text-align: center;
  padding:0;

}