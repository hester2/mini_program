/* pages/chat/doctor-home/figure-visits/index.wxss */
.yh-figure-main{
  margin: 30rpx 28rpx;
  box-shadow: 2rpx 2rpx 12rpx #EAF4FF;
  box-sizing: border-box;
  padding: 28rpx 28rpx;
}
.yh-figure-ma{
  color: #4D4D4D;
}
.yh-figure-card{
  display: flex;
  flex-flow:row wrap;
  justify-content: flex-start;
  margin-top: 30rpx;
}
.yh-figure-item{
  width: 30.8%;
  height: 198rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  background-color: #F4F7F9;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
}
.yh-figure-te{
  font-size: 28rpx;
  color: #4D4D4D;
  text-align: center;
  margin-top: 20rpx;
}
.yh-figure-su{
  font-size: 22rpx;
  color: #B3B3B3;
   text-align: center;
   margin-top: 10rpx;
}
.yh-figure-item:nth-of-type(3){
  margin-right: 0rpx;
}
.left{
}
._left{
 background-color: #49A0FF;
 color: #fff;
}
.yh-figure-mt{
  margin-top: 20rpx;
}
.yh-evalu-tex {
  border: 1px solid #49a0ff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 25rpx 25rpx;
  height: 304rpx;
  margin-top: 30rpx;
}

.yh-evalu-tex text {
  color: #ccc;
  font-size: 22rpx;
  float: right;
}
.yh-evalu-tex textarea{
  height: 230rpx;
}
.place-holder{
  color: #D4D4DE;
}
.yh-figure-photo{
  display: flex;
    flex-flow:row wrap;
  justify-content: flex-start;
  margin-top: 25rpx;
}
.yh-figure-left{
  width: 22%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 137rpx;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  position: relative;
}
.yh-figure-left:nth-of-type(4){
  margin-right:0rpx;
}
.yh-figure-left:nth-of-type(8){
  margin-right:0rpx;
}
.yh-figure-right{
  flex: 9;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 137rpx;
}
.yh-figure-left image{
  width: 137rpx;
  height: 137rpx;
}
.yh-figure-right text:nth-of-type(1){
  color: #4D4D4D;
  text-align: left
}
.yh-figure-right text:nth-of-type(2){
  color: #B3B3B3;
  text-align: left;
  margin-top: 10rpx;
}
.ot-tem-del{
  position: absolute;
  top: 0px;
  right: 0px;
  width: 40rpx !important;
  height: 40rpx !important;
}
.yh-figure-hj{
  display: flex;
  justify-content: space-between
}
.yh-figure-hr{
 color: #4D4D4D;
 height: 45rpx;
  line-height: 45rpx;
}
.yh-figure-hl{
  display: flex;
}
.yh-figure-btn{
  height: 45rpx;
  line-height: 45rpx;
  width: 103rpx;
  border:1px solid #49A0FF;
  color: #49A0FF;
  border-radius: 18rpx;
  text-align: center;
  margin-left: 20rpx;
}
.active{
  background-color: #49A0FF;
  color: #fff;
}
.yh-figure-items{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  padding: 40rpx 0px;
}
.yh-figure-items .section__title{
  color: #4D4D4D;
}
.yh-figure-items .picker{
  color: #4D4D4D;
  font-size: 25rpx;
}
.yh-figure-items:last-of-type{
  border-bottom: 0px solid #eee;
}
.yh-figure-items .input{
  background-color: #fff;
  text-align: right;
}
.yh-figure-vw{
  display: flex;
  justify-content: center;
}
.yh-figure-zhi{
  color: #49A0FF;
  display: flex;
}

radio {
  transform:scale(0.8);
}
.yh-figure-button{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-top:20rpx;
  margin-bottom: 30rpx;
  background-color: #49A0FF !important;
}