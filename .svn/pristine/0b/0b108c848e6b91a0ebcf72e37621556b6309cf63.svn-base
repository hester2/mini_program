/* pages/home/live/liveDetail/index.wxss */

.container {
  width: 100%;
  height: 100%;
}

video {
  width: 100%;
  height: 425rpx;
}

.yh-video-cover {
  width: 100%;
  height: 100%;
  position: relative;
}

.yh-video-play-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 40px;
  height: 40px;
  z-index: 5;
}

.yh-video-bg-black {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
}

.yh-video-cover-txt {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
  color: #fff;
  font-size: 28rpx;
  margin-top: 35rpx;
  height: 90rpx;
}

.yh-video-icon-lock {
  width: 41rpx;
  height: 39rpx;
  margin: 0 30rpx;
}

.yh-video-icon-lock:nth-of-type(2) {
  width: 35rpx;
  height: 35rpx;
}

.yh-video-txt {
  margin: 10rpx auto;
}

.yh-live-pos {
  margin-top: 200rpx;
  display: flex;
  justify-content: flex-end;
}

.yh-live-pod{
  color: #fff;
  border-radius: 30rpx;
  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  font-size: 22rpx;
  background-color: #4e4e4e;
  margin-right: 30rpx;
  box-sizing: border-box;
  padding: 0px 20rpx;
}

.grace-list-title-desc {
  margin-left: 0rpx;
}

.grace-list-title-b {
  margin-top: 5rpx;
}

.grace-list-title-text {
  font-size: 28rpx !important;
}

.grace-list-image {
  width: 74rpx;
  height: 74rpx;
}

.grace-list-title-s {
  display: flex;
  justify-content: flex-start;
}

.grace-list-title-desc-s {
  border: 1px solid #49a0ff;
  border-radius: 30rpx;
  color: #49a0ff;
  text-align: center;
  box-sizing: border-box;
  padding: 0px 25rpx;
  font-size: 22rpx;
  height: 36rpx;
  line-height: 31rpx;
  margin-left: 20rpx;
}

.yh-live-ho {
  box-sizing: border-box;
  padding: 0px 28rpx;
  padding-bottom: 100rpx;
}

.yh-make-main {
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 28rpx 28rpx;
  justify-content: center;
  margin-top: 15rpx;
}

.yh-make-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #4d4d4d;
  text-align: center;
  margin-left: 58rpx;
}

.yh-make-content {
  color: #b3b3b3;
  display: flex;
}

.yh-make-le {
  height: 100%;
  width: 100rpx;
  display: flex;
  margin-right: 30rpx;
}

.yh-make-img {
  height: 27rpx;
  width: 16rpx;
}

.yh-mast-qm {
  display: flex;
}

.yh-mast-qm text:nth-of-type(1) {
  width: 6rpx;
  height: 30rpx;
  background-color: #48a0ff;
  border-radius: 30rpx;
}

.yh-mast-qm text:nth-of-type(2) {
  font-weight: bold;
  color: #303030;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 15rpx;
  flex: 9;
}

.yh-mast-qm text:nth-of-type(3) {
  color: #ccc;
  flex: 3;
  text-align: right;
}

.yh-mast-qm-b {
  margin: 50rpx 0px;
  margin-bottom: 0rpx;
}

.grace-comments-content {
  margin-top: 20rpx;
  color: #b3b3b3;
}

.grace-border-b {
  border-bottom: 1px solid #f7f7f7;
}

.grace-comments-items {
  box-sizing: border-box;
  padding: 40rpx 0;
}

.yh-message-fexd {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 125rpx;
  box-sizing: border-box;
  padding: 0px 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  background-color: #fff;
}

.yh-message-fexd .input {
  width: 70%;
  background-color: #f4f7f9;
  height: 75rpx;
  border-radius: 30rpx;
}

.yh-holder {
  font-size: 28rpx;
}

.yh-message-mg {
  width: 73rpx;
  height: 73rpx;
  margin-left: 20rpx;
}

.grace-comments-content-c {
  color: #49a0ff;
}

.grace-comments-im {
  width: 37rpx;
  height: 39rpx;
}
